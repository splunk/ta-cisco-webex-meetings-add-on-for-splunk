{
    "meta": {
        "name": "ta-cisco-webex-meetings-add-on-for-splunk",
        "displayName": "Cisco WebEx Meetings Add-on for Splunk",
        "version": "1.1.5",
        "apiVersion": "3.0.0",
        "restRoot": "ta_cisco_webex_meetings_add_on_for_splunk"
    },
    "pages": {
        "configuration": {
            "title": "Configuration",
            "description": "Set up your add-on",
            "tabs": [{
                    "name": "additional_parameters",
                    "title": "Add-on Settings",
                    "entity": [{
                            "field": "site_name",
                            "label": "Site Name",
                            "type": "text",
                            "help": "This identifies the Webex site you are targeting with your API request. Site name is the subdomain of the Webex site URL.For example, for https://mysitename.webex.com specify mysitename",
                            "required": true,
                            "defaultValue": "",
                            "validators": [{
                                "type": "string",
                                "minLength": 0,
                                "maxLength": 8192,
                                "errorMsg": "Max length of text input is 8192"
                            }],
                            "options": {
                                "placeholder": "mysitename"
                            }
                        },
                        {
                            "field": "username",
                            "label": "Username",
                            "type": "text",
                            "help": "Service Account Username or Email address of the host or admin account making a request.",
                            "required": true,
                            "defaultValue": "",
                            "validators": [{
                                "type": "string",
                                "minLength": 0,
                                "maxLength": 8192,
                                "errorMsg": "Max length of text input is 8192"
                            }],
                            "options": {
                                "placeholder": "localuser or user@example.com"
                            }
                        },
                        {
                            "field": "password_type",
                            "label": "Authentication Type",
                            "help": "Please choose an Authenticatoin Type",
                            "required": true,
                            "type": "singleSelect",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [{
                                        "value": "password",
                                        "label": "Basic Password Auth"
                                    },
                                    {
                                        "value": "webExAccessToken",
                                        "label": "OAuth/SSO"
                                    }
                                ]
                            },
                            "defaultValue": "password"
                        },
                        {
                            "field": "redirect_uri",
                            "label": "Redirect URI",
                            "type": "text",
                            "help": "Must match the redirect URI defined in your Webex Meetings Integration configuration",
                            "required": false,
                            "defaultValue": "",
                            "encrypted": false,
                            "validators": [{
                                "type": "string",
                                "minLength": 0,
                                "maxLength": 8192,
                                "errorMsg": "Max length of password is 8192"
                            }],
                            "options": {
                                "placeholder": "http://{{hostname}}:{{port}}/en-US/splunkd/__raw/services/cisco-webex-meetings-oauth"
                            }
                        },         
                        {
                            "field": "client_id",
                            "label": "Client ID",
                            "type": "text",
                            "help": "Client ID for WebEx Oauth Integration App",
                            "required": false,
                            "defaultValue": "",
                            "encrypted": false,
                            "validators": [{
                                "type": "string",
                                "minLength": 0,
                                "maxLength": 8192,
                                "errorMsg": "Max length of password is 8192"
                            }]
                        },
                        {
                            "field": "client_secret",
                            "label": "Client Secret",
                            "type": "text",
                            "help": "Client Secret for WebEx Oauth Integration App",
                            "required": false,
                            "defaultValue": "*  *  *",
                            "encrypted": true,
                            "validators": [{
                                "type": "string",
                                "minLength": 0,
                                "maxLength": 8192,
                                "errorMsg": "Max length of password is 8192"
                            }]
                        },
                        {
                            "field": "password",
                            "label": "Password / Access Token",
                            "type": "text",
                            "help": "Enter the Service Account Password or Generate the Access Token by clicking the below button",
                            "required": true,
                            "defaultValue": "*  *  *",
                            "encrypted": true,
                            "validators": [{
                                "type": "string",
                                "minLength": 0,
                                "maxLength": 8192,
                                "errorMsg": "Max length of password is 8192"
                            }]
                        },
                        {
                            "field": "refresh_token",
                            "label": "Refresh Token",
                            "type": "text",
                            "help": "Enter the Refresh Token",
                            "required": false,
                            "defaultValue": "*  *  *",
                            "encrypted": true,
                            "validators": [{
                                "type": "string",
                                "minLength": 0,
                                "maxLength": 8192,
                                "errorMsg": "Max length of password is 8192"
                            }]
                        }
                    ]
                },

                {
                    "name": "logging",
                    "title": "Logging",
                    "entity": [{
                        "field": "loglevel",
                        "label": "Log level",
                        "type": "singleSelect",
                        "options": {
                            "disableSearch": true,
                            "autoCompleteFields": [{
                                    "label": "DEBUG",
                                    "value": "DEBUG"
                                },
                                {
                                    "label": "INFO",
                                    "value": "INFO"
                                },
                                {
                                    "label": "WARNING",
                                    "value": "WARNING"
                                },
                                {
                                    "label": "ERROR",
                                    "value": "ERROR"
                                },
                                {
                                    "label": "CRITICAL",
                                    "value": "CRITICAL"
                                }
                            ]
                        },
                        "defaultValue": "INFO"
                    }]
                },
                {
                    "name": "proxy",
                    "title": "Proxy",
                    "entity": [{
                            "field": "proxy_enabled",
                            "label": "Enable",
                            "type": "checkbox"
                        },
                        {
                            "field": "proxy_type",
                            "label": "Proxy Type",
                            "type": "singleSelect",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [{
                                        "label": "http",
                                        "value": "http"
                                    },
                                    {
                                        "label": "socks4",
                                        "value": "socks4"
                                    },
                                    {
                                        "label": "socks5",
                                        "value": "socks5"
                                    }
                                ]
                            },
                            "defaultValue": "http"
                        },
                        {
                            "field": "proxy_url",
                            "label": "Host",
                            "type": "text",
                            "validators": [{
                                "type": "string",
                                "minLength": 0,
                                "maxLength": 4096,
                                "errorMsg": "Max host length is 4096"
                            }]
                        },
                        {
                            "field": "proxy_port",
                            "label": "Port",
                            "type": "text",
                            "validators": [{
                                "type": "number",
                                "range": [
                                    1,
                                    65535
                                ]
                            }]
                        },
                        {
                            "field": "proxy_username",
                            "label": "Username",
                            "type": "text",
                            "validators": [{
                                "type": "string",
                                "minLength": 0,
                                "maxLength": 50,
                                "errorMsg": "Max length of username is 50"
                            }]
                        },
                        {
                            "field": "proxy_password",
                            "label": "Password",
                            "type": "text",
                            "encrypted": true,
                            "validators": [{
                                "type": "string",
                                "minLength": 0,
                                "maxLength": 8192,
                                "errorMsg": "Max length of password is 8192"
                            }]
                        },
                        {
                            "field": "proxy_rdns",
                            "label": "Remote DNS resolution",
                            "type": "checkbox"
                        }
                    ],
                    "options": {
                        "saveValidator": "function(formData) { if(!formData.proxy_enabled || formData.proxy_enabled === '0') {return true; } if(!formData.proxy_url) { return 'Proxy Host can not be empty'; } if(!formData.proxy_port) { return 'Proxy Port can not be empty'; } return true; }"
                    }
                }
            ]
        },
        "inputs": {
            "title": "Inputs",
            "description": "Manage your data inputs",
            "table": {
                "header": [{
                        "field": "name",
                        "label": "Name"
                    },
                    {
                        "field": "interval",
                        "label": "Interval"
                    },
                    {
                        "field": "index",
                        "label": "Index"
                    },
                    {
                        "field": "disabled",
                        "label": "Status"
                    }
                ],
                "moreInfo": [{
                        "field": "name",
                        "label": "Name"
                    },
                    {
                        "field": "interval",
                        "label": "Interval"
                    },
                    {
                        "field": "index",
                        "label": "Index"
                    },
                    {
                        "field": "disabled",
                        "label": "Status"
                    },
                    {
                        "field": "live",
                        "label": "Monitor Active Session"
                    },
                    {
                        "field": "endpoints",
                        "label": "Endpoints"
                    },
                    {
                        "field": "start_time_start",
                        "label": "Begin Time"
                    }
                ],
                "actions": [
                    "edit",
                    "enable",
                    "delete",
                    "clone"
                ]
            },
            "services": [{
                    "name": "general_service",
                    "title": "General Service",
                    "entity": [{
                            "field": "name",
                            "label": "Name",
                            "type": "text",
                            "help": "Enter a unique name for the data input",
                            "required": true,
                            "validators": [{
                                    "type": "regex",
                                    "pattern": "^[a-zA-Z]\\w*$",
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores."
                                },
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 100,
                                    "errorMsg": "Length of input name should be between 1 and 100"
                                }
                            ]
                        },
                        {
                            "field": "interval",
                            "label": "Interval",
                            "type": "text",
                            "required": true,
                            "defaultValue": "60",
                            "help": "Time interval of input in seconds. 60 seconds or less.",
                            "validators": [{
                                "type": "regex",
                                "pattern": "^\\-[1-9]\\d*$|^\\d*$",
                                "errorMsg": "Interval must be an integer."
                            }]
                        },
                        {
                            "field": "index",
                            "label": "Index",
                            "type": "singleSelect",
                            "defaultValue": "default",
                            "options": {
                                "endpointUrl": "data/indexes",
                                "blackList": "^_.*$",
                                "createSearchChoice": true
                            },
                            "required": true,
                            "validators": [{
                                "type": "string",
                                "minLength": 1,
                                "maxLength": 80,
                                "errorMsg": "Length of index name should be between 1 and 80."
                            }]
                        },
                        {
                            "field": "live",
                            "label": "Monitor Active Session",
                            "help": "Use this to retrieve Active Session Data such as information for all service types, including Meeting Center, Training Center, Event Center, Sales Center, and Support Center.",
                            "required": false,
                            "type": "checkbox",
                            "defaultValue": true
                        }
                    ]
                },
                {
                    "name": "history_service",
                    "title": "History Service",
                    "entity": [{
                            "field": "name",
                            "label": "Name",
                            "type": "text",
                            "help": "Enter a unique name for the data input",
                            "required": true,
                            "validators": [{
                                    "type": "regex",
                                    "pattern": "^[a-zA-Z]\\w*$",
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores."
                                },
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 100,
                                    "errorMsg": "Length of input name should be between 1 and 100"
                                }
                            ]
                        },
                        {
                            "field": "interval",
                            "label": "Interval",
                            "type": "text",
                            "required": true,
                            "defaultValue": "86400",
                            "help": "Time interval of input in seconds. 86400 seconds or more.",
                            "validators": [{
                                "type": "regex",
                                "pattern": "^\\-[1-9]\\d*$|^\\d*$",
                                "errorMsg": "Interval must be an integer."
                            }]
                        },
                        {
                            "field": "index",
                            "label": "Index",
                            "type": "singleSelect",
                            "defaultValue": "default",
                            "options": {
                                "endpointUrl": "data/indexes",
                                "blackList": "^_.*$",
                                "createSearchChoice": true
                            },
                            "required": true,
                            "validators": [{
                                "type": "string",
                                "minLength": 1,
                                "maxLength": 80,
                                "errorMsg": "Length of index name should be between 1 and 80."
                            }]
                        },
                        {
                            "field": "endpoints",
                            "label": "Endpoints",
                            "help": "Choose the endpoints to retrieve data.  \n\nNote: Meeting Usage & Meeting Attendees endpoints helps populate Dashboard.",
                            "required": true,
                            "type": "multipleSelect",
                            "options": {
                                "delimiter": "~",
                                "items": [{
                                        "value": "LstmeetingusageHistory",
                                        "label": "Meeting Usage"
                                    },
                                    {
                                        "value": "LstmeetingattendeeHistory",
                                        "label": "Meeting Attendees"
                                    },
                                    {
                                        "value": "LsttrainingsessionHistory",
                                        "label": "Training Sessions"
                                    },
                                    {
                                        "value": "LsttrainingattendeeHistory",
                                        "label": "Training Attendees"
                                    },
                                    {
                                        "value": "LsteventsessionHistory",
                                        "label": "Event Session"
                                    },
                                    {
                                        "value": "LsteventattendeeHistory",
                                        "label": "Event Attendees"
                                    },
                                    {
                                        "value": "LstrecordaccessHistory",
                                        "label": "Recorded Access"
                                    },
                                    {
                                        "value": "LstsupportsessionHistory",
                                        "label": "Support Sessions"
                                    },
                                    {
                                        "value": "LstsupportattendeeHistory",
                                        "label": "Support Attendees"
                                    }
                                ]
                            }
                        },
                        {
                            "field": "start_time_start",
                            "label": "Begin Time",
                            "help": "This is the time from where you wwant to ingest the historical data.  Please enter UTC time. Format: MM/DD/YYYY hh:mm:ss\n\nNOTE: Begin Date must be at least 3 days ago and ideally no more than 90 days.",
                            "required": true,
                            "type": "text",
                            "validators": [{
                                "type": "string",
                                "minLength": 0,
                                "maxLength": 8192,
                                "errorMsg": "Max length of text input is 8192"
                            }],
                            "options": {
                                "placeholder": "04/01/2020 00:00:00"
                            }
                        }
                    ]
                }
            ]
        }
    }
}